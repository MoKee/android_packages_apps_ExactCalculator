<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line"
            android:minHeight="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                    <TextView
                        android:id="@+id/display"
                        style="@style/Theme.Calculator.Widget.Display"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:longClickable="false" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:contentDescription="@string/del"
                android:src="@drawable/widget_delete" />

            <ImageButton
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_bg"
                android:contentDescription="@string/clr"
                android:src="@drawable/widget_clear"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit_7"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_7" />

                <Button
                    android:id="@+id/digit_8"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_8" />

                <Button
                    android:id="@+id/digit_9"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_9" />

                <Button
                    android:id="@+id/op_div"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_div" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit_4"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_4" />

                <Button
                    android:id="@+id/digit_5"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_5" />

                <Button
                    android:id="@+id/digit_6"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_6" />

                <Button
                    android:id="@+id/op_mul"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_mul" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/digit_1"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_1" />

                <Button
                    android:id="@+id/digit_2"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_2" />

                <Button
                    android:id="@+id/digit_3"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_3" />

                <Button
                    android:id="@+id/op_sub"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_sub" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/dec_point"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/dec_point"/>

                <Button
                    android:id="@+id/digit_0"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/digit_0" />

                <Button
                    android:id="@+id/equal"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/eq" />

                <Button
                    android:id="@+id/op_add"
                    style="@style/Theme.Calculator.Widget.ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/op_add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
